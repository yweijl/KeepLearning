@inherits LayoutComponentBase
@inject AppAuthenticationStateProvider AuthenticationStateProvider;

<PageTitle>Blijven leren</PageTitle>

<MudThemeProvider />
<MudDialogProvider />
<MudSnackbarProvider />

<MudLayout>
    <MudAppBar Elevation="1">
        <MudIconButton Icon="@Icons.Material.Filled.Menu" Color="Color.Inherit" Edge="Edge.Start" OnClick="@((e) => DrawerToggle())" />
        <MudText Typo="Typo.h5" Class="ml-3">Blijven leren</MudText>
        <MudSpacer />
        <MudButton Variant="Variant.Text" Style="color: white" OnClick="@OnLogout">Logout</MudButton>
    </MudAppBar>
    <MudDrawer @bind-Open="_drawerOpen" ClipMode="DrawerClipMode.Always" Elevation="2">
        <NavMenu/>
    </MudDrawer>
    <MudMainContent>
        <MudContainer MaxWidth="MaxWidth.Medium">
            @Body
        </MudContainer>
    </MudMainContent>
</MudLayout>
@code {
    
    bool _drawerOpen = false;

    private async Task OnLogout()
    {
        await AuthenticationStateProvider.LogoutAsync();
    }

    void DrawerToggle()
    {
        _drawerOpen = !_drawerOpen;
    }
}